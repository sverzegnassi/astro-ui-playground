---
import Box, { type Props as BoxProps } from "@components/Box.astro";
import AccordionGroup from "@components/AccordionGroup.astro";
import Accordion from "@components/Accordion.astro";

export type Question = {
  q: string;
  a: string;
};

interface Props extends BoxProps {
  title: string;
  questions: Question[];
};

const { class: className, title, questions, ...attributes } = Astro.props;
const attrs : Record<string, any> = attributes
---

<Box {...attrs} class:list={[className]}>
  <AccordionGroup title={title}>
    {
      questions.map((question: Question) => (
        <Accordion title={question.q}>
          <Fragment set:html={question.a} />
        </Accordion>
      ))
    }
  </AccordionGroup>
</Box>
