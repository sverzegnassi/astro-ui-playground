---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"ul"> & {};

const { class: className, ...attrs } = Astro.props;
---

<ul class:list={["menu", className]} {...attrs}>
  <slot />
</ul>

<style>
  .menu {
    @apply grid;
    @apply grid-cols-[max-content_1fr_max-content];
    @apply rounded-md;
    @apply gap-y-0.5;
  }
</style>
